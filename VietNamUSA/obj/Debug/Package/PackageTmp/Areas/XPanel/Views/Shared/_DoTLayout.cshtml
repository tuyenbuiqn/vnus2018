@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Styles.Render("~/bundles/CommonStyle")
    @Styles.Render("~/bundles/_adminLteStyle")
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    @Scripts.Render("~/bundles/CommonScript")
    @Scripts.Render("~/bundles/PluginScript")
    @Scripts.Render("~/bundles/DoTScript")
    <script src="~/Scripts/sortable/Sortable.js"></script>

    <script src="~/Plugins/ckeditor/ckeditor.js"></script>
    <script src="~/Plugins/ckeditor/config.js"></script>

    <script src="~/Plugins/ckfinder/ckfinder.js"></script>


    @Scripts.Render("~/bundles/_adminLte")
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        @Html.Partial("_DoTHeader")
        @Html.Partial("_DoTMainMenu")
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    @ViewBag.H3Title
                    @*<small>Control panel</small>*@
                </h1>
                <ol class="breadcrumb">
                    <li><a href='@Html.Raw(Url.Action("Index","Home"))' target="_self"><i class="fa fa-dashboard"></i>Trang chủ</a></li>
                    @*<li class="active">Dashboard</li>*@
                </ol>
            </section>
            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
        @Html.Partial("_DoTFooter")
    </div><!-- ./wrapper -->
</body>
</html>
