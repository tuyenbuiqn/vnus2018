@using VietUSA.Repository.Common.Constants
@using VietUSA.Repository.Models
@{
    var userinfo = (UserInfoModel)Session[SessionKeys.UserInfo];
}
<header class="main-header">
    <!-- Logo -->
    <a href='@Html.Raw(Url.Action("Index","Home"))' target="_self" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>X-Panel</b></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>X-Panel</b></span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <a class="t-a-header" style="text-transform: uppercase">
            X-Panel Content Management System
        </a>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <!-- Messages: style can be found in dropdown.less-->
                <li class="dropdown messages-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">

                        <i class="fa fa-envelope-o">

                        </i>
                        @*<span class="label label-success">4</span>*@
                    </a>
                </li>
                <!-- Notifications: style can be found in dropdown.less -->
                <li class="dropdown notifications-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-bell-o"></i>
                        @*<span class="label label-warning">10</span>*@
                    </a>

                </li>
                <!-- Tasks: style can be found in dropdown.less -->
                <li class="dropdown tasks-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-flag-o"></i>
                        @*<span class="label label-danger">9</span>*@
                    </a>
                </li>
                <!-- User Account: style can be found in dropdown.less -->
                @Html.Partial("_UserInfo")

                <!-- Control Sidebar Toggle Button -->
                @*<li>
                        <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                    </li>*@
            </ul>
        </div>
    </nav>
</header>